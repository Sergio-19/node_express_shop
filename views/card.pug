div(class= 'col col-lg-4') 
    div(class= 'card')
        a(href= 'goods?id='+val['id'])
            h3(class= 'card-title text-center') #{val['name']}
            img(src= '/images/' + val['image'] class= 'card-images')
            p(class= 'text-center card-price') #{val['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&')} &#8381;
        ul(class= 'card-action') 
            li 
                button(data-goods_id= val['id'] class= 'button button-primary add-to-cart') В корзину