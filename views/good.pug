include head.pug 
    div(class= 'wrap')
        div(class= 'content')
            header(class= 'site-header')
                include header.pug
            div(class= 'container')
                div(class= 'row')
                    div(class= 'col col-md-12')
                        h2(class= 'panel-title text-center good-page-title') #{good['name']} 
                    div(class= 'col col-md-4')
                        img(src= 'images/' + good['image'] class= 'goods-big-image') 
                    div(class= 'col col-md-8') 
                        p #{good['description']}  
                        span(class= 'success') Цена: #{good['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&')} &#8381;  
                        button(class= 'button-success add-to-cart' data-goods_id= good['id']) В корзину
            include nav.pug  
    include footer.pug                  